[basic]
enable = true
timezone_offset = 8
height_cm = 175
weight_kg = 70
body_fat_percentage = 20

[nightscout]
api_url = "https://your-nightscout-url.herokuapp.com"
api_key = "your-api-secret-here" 
timezone_offset = 8

[ai_config]
api_url = "http://localhost:11434/v1/chat/completions"
api_key = "your-ai-api-key"
model_name = "llama3.1:8b"
timeout = 60

# GLM-4.5模型配置示例
# 如果使用智谱AI的GLM-4.5模型，请使用以下配置：
# api_url = "https://open.bigmodel.cn/api/paas/v4/chat/completions"
# api_key = "your-glm-api-key"
# model_name = "glm-4.5"  # 支持的变体: glm-4.5, glm-4.5-air, glm-4.5-flash

[schedule]
analysis_times = ["10:00", "15:00", "21:00"]
enable_auto_analysis = false
sync_interval_minutes = 15

[notification]
enable_web_push = true
enable_email = false

[email]
smtp_server = "smtp.gmail.com"
smtp_port = 587
smtp_username = "your-email@gmail.com"
smtp_password = "your-app-password"
from_email = "your-email@gmail.com"
to_emails = ["recipient@example.com"]

[xxtui]
api_key = "your-xxtui-api-key"
from = "Nightscout"

[alert]
high_glucose_threshold = 10.0
low_glucose_threshold = 3.9
enable_email_alerts = false
enable_xxtui_alerts = false

[auth]
enable = false
password = "your-secure-password"

[database]
# 数据库文件路径配置
# 支持绝对路径或相对路径
# 开发环境使用: data/nightscout_data.db
# Docker环境建议使用: /app/data/nightscout_data.db
path = "data/nightscout_data.db"
